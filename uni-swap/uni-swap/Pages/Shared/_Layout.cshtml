<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - uni_swap</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/uni_swap.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm py-3">
            <div class="container">
                <a class="navbar-brand text-primary fw-bold fs-4" href="./HomePage">UniSwap</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                    <ul class="navbar-nav align-items-center">
                        @{
                            var email = Context.Session.GetString("Email");
                            var isLoggedIn = !string.IsNullOrEmpty(email);
                        }
                        
                        @if (isLoggedIn)
                        {
                            <li class="nav-item"><a class="nav-link" href="./HomePage">Home</a></li>
                            <li class="nav-item"><a class="nav-link" href="./CartPage">Cart</a></li>
                            <li class="nav-item"><a class="nav-link" href="./SellItem">Sell Item</a></li>
                            <li class="nav-item"><a class="nav-link me-4" href="./MyProfile">My Profile</a></li>
                            <li class="nav-item">
                                <a href="./Logout" class="btn btn-outline-danger px-4">Logout</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a href="./Login" class="btn btn-primary px-4">Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - uni_swap - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
