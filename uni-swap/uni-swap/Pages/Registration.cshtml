@page
@model uni_swap.Pages.RegistrationModel
@{
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>UniSwap Registration</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <style>
        body {
            background-color: #f8f9fa;
        }

        /* Navbar styling */
        .navbar-nav .nav-link {
            padding-right: 1.5rem;
            padding-left: 1.5rem;
            font-size: 0.9rem;
            color: #555;
        }

        /* Icon Container - Same blue circle, but we will change the icon inside in HTML */
        .icon-container {
            width: 80px;
            height: 80px;
            background-color: #0d6efd;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 20px;
        }

            .icon-container i {
                font-size: 40px;
                color: white;
            }

        /* Seamless Input Groups styling */
        .input-group-text {
            background-color: white;
            border-right: none;
        }

        .input-group .form-control {
            border-left: none;
            box-shadow: none;
        }

        .input-group:focus-within .input-group-text,
        .input-group:focus-within .form-control {
            border-color: #86b7fe;
        }

        .input-icon {
            color: #aaa;
        }

        /* Card Styling */
        .auth-card {
            border: none;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.05);
        }
    </style>
</head>
<body>

   

    <div class="container mt-5 pt-4 mb-5">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">

                <div class="text-center mb-4">
                    <div class="icon-container shadow-sm">
                        <i class="bi bi-person-plus-fill"></i>
                    </div>
                    <h4 class="fw-bold">Create Account</h4>
                    <p class="text-muted">Join the UniSwap community today</p>
                </div>

                <div class="card auth-card p-4">
                    <div class="card-body">
                        <form method="post">
                            <div class="mb-3">
                                <label class="form-label fw-semibold small">Full Name</label>
                                <div class="input-group input-group-lg">
                                    <span class="input-group-text">
                                        <i class="bi bi-person input-icon"></i>
                                    </span>
                                    <input type="text" name="FirstName" class="form-control fs-6" placeholder="John">
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-semibold small">Full Name</label>
                                <div class="input-group input-group-lg">
                                    <span class="input-group-text">
                                        <i class="bi bi-person input-icon"></i>
                                    </span>
                                    <input type="text" name="LastName" class="form-control fs-6" placeholder="Doe">
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-semibold small">University Email</label>
                                <div class="input-group input-group-lg">
                                    <span class="input-group-text">
                                        <i class="bi bi-envelope input-icon"></i>
                                    </span>
                                    <input type="email" name="Email" class="form-control fs-6" placeholder="you@university.edu">
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-semibold small">Password</label>
                                <div class="input-group input-group-lg">
                                    <span class="input-group-text">
                                        <i class="bi bi-lock input-icon"></i>
                                    </span>
                                    <input type="password" name="Password" class="form-control fs-6" placeholder="At least 8 characters">
                                </div>
                            </div>

                            <div class="mb-4">
                                <label class="form-label fw-semibold small">Confirm Password</label>
                                <div class="input-group input-group-lg">
                                    <span class="input-group-text">
                                        <i class="bi bi-shield-lock input-icon"></i>
                                    </span>
                                    <input type="password" class="form-control fs-6" placeholder="Repeat password">
                                </div>
                            </div>

                            <div class="mb-4 form-check">
                                <input type="checkbox" class="form-check-input" id="termsCheck">
                                <label class="form-check-label small text-muted" for="termsCheck">
                                    I agree to the <a href="#" class="text-decoration-none">Terms of Service</a> and <a href="#" class="text-decoration-none">Privacy Policy</a>.
                                </label>
                            </div>

                            <button type="submit" class="btn btn-primary w-100 btn-lg">Create Account</button>
                        </form>
                    </div>
                </div>

                <div class="text-center mt-4">
                    <p class="text-muted">Already have an account? <a href="index.html" class="text-decoration-none fw-bold">Sign In</a></p>
                </div>

            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>