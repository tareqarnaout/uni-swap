@page
@model uni_swap.Pages.SellItemModel

<h2>Sell a New Item</h2>

<form method="post" class="w-50">

    <div class="mb-3">
        <label class="form-label">Item Name</label>
        <input asp-for="Item.Name" class="form-control" />
        <span asp-validation-for="Item.Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Price</label>
        <input asp-for="Item.Price" class="form-control" />
        <span asp-validation-for="Item.Price" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Image URL</label>
        <input asp-for="Item.ImageUrl" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Publish Item</button>

</form>

@if (Model.Success)
{
    <div class="alert alert-success mt-3">
        Item added successfully!
    </div>
}
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
